<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@drawable/orangish"
    tools:context="com.example.lenovo.planner.Signup">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:id="@+id/logo_activity">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/wplannerlogo"><requestFocus/></ImageView>
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_activity"
        android:layout_margin="20dp"
        android:background="#ffffff">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/name"
                android:layout_marginRight="5dp"
                android:hint="First Name   "
                android:id="@+id/et_fname"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_toRightOf="@id/et_fname"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:hint="Last Name       "
                android:layout_marginTop="20dp"
                android:id="@+id/et_lname"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/account2"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:hint="Enter Email"
                android:id="@+id/et_email"
                android:layout_below="@id/et_fname"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phone1"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:inputType="phone"
                android:hint="Enter Mobile Number"
                android:layout_below="@id/et_email"
                android:id="@+id/et_mobilenumber"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password1"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:hint="Enter Password"
                android:layout_below="@id/et_mobilenumber"
                android:id="@+id/et_password"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password1"
                android:layout_marginRight="20dp"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:hint="Enter Confirm Password"
                android:layout_below="@id/et_password"
                android:id="@+id/et_cpassword"
                />
            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="#dd5959"
                android:text="Register"
                android:layout_below="@id/et_cpassword"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/btn_register"
                android:onClick="register"
                android:layout_marginBottom="20dp"
                />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/et_cpassword"
            android:text="  Login  "
            android:background="#dd5959"
            android:onClick="loginback"/>
        </RelativeLayout>
        </RelativeLayout>
</ScrollView>
