<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="#ff5555"
    tools:context="com.example.lenovo.planner.VendorProfile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true"
        >
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgProfilePicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/account_logo"
                app:border_color="#fff"
                app:border_width="3dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_vendor"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="#fff"
            android:focusableInTouchMode="true"
            android:layout_below="@id/imgProfilePicture"
            >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Organisation Name"
        android:id="@+id/oname"
        android:maxLines="1"
        android:maxLength="20"
        android:inputType="text"
         
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/names"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/oname"
        android:inputType="phone"
        android:hint="Contact Number"
        android:maxLength="10"
        android:maxLines="1"
        android:id="@+id/contact"
         
        android:drawablePadding="20dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/phone"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact"
        android:inputType="number"
        android:maxLength="10"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:hint="Working Experience"
        android:drawablePadding="20dp"
         
        android:id="@+id/experience"
        android:drawableLeft="@drawable/working"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/experience"
         
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:maxLength="10"
        android:maxLines="1"
        android:hint="Expected Price"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/price"
        android:id="@+id/price"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        android:drawableLeft="@drawable/city"
         
        android:id="@+id/city"
        android:drawablePadding="20dp"
        android:layout_marginTop="5dp"
        android:hint="City"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         
        android:layout_below="@id/city"
        android:inputType="text"
        android:id="@+id/district"
        android:maxLines="1"
        android:maxLength="20"
        android:drawableLeft="@drawable/city"
        android:layout_marginTop="5dp"
        android:drawablePadding="20dp"
        android:hint="District"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/district"
        android:maxLines="1"
        android:maxLength="20"
        android:inputType="text"
         
        android:id="@+id/state"
        android:drawableLeft="@drawable/area"
        android:layout_marginTop="5dp"
        android:drawablePadding="20dp"
        android:hint="State"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/state"
         
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="6"
        android:id="@+id/pincode"
        android:drawableLeft="@drawable/pin"
        android:layout_marginTop="5dp"
        android:hint="Pincode"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pincode"
        android:inputType="text"
        android:id="@+id/status"
        android:maxLines="5"
        android:maxLength="144"
        android:drawableLeft="@drawable/status"
        android:layout_marginTop="5dp"
        android:drawablePadding="20dp"
        android:hint="Status"
        />
        </RelativeLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:drawablePadding="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layout_vendor"
        android:layout_alignParentRight="true"
        android:textSize="13dp"
        android:background="@drawable/rounded_bubble"
        android:layout_marginRight="35dp"
        android:text="Submit"
        android:layout_marginBottom="30dp"
        android:id="@+id/submit"
        android:onClick="submit"/>
    </RelativeLayout>

</ScrollView>
