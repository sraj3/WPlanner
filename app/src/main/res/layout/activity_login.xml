<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangish"
    android:id="@+id/activity_login_relative"
    tools:context="com.example.lenovo.planner.Login">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/logo_activity_login">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/wplannerlogo"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_activity_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="#ffffff">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/account2"
        android:hint="Enter Email"
        android:gravity="center"
        android:id="@+id/et_email"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email"
        android:drawableLeft="@drawable/password1"
        android:layout_marginRight="20dp"
        android:hint="Enter Password"
        android:gravity="center"
        android:inputType="textPassword"
        android:id="@+id/et_password"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Forgot Password?   "
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="#dd5959"
        android:layout_below="@id/et_password"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_forgotpassword"
        android:onClick="forgotpassword"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       Register Here        "
        android:textAllCaps="false"
        android:background="#dd5959"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_password"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn_registerhere"
        android:onClick="registerhere"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        android:background="#d3d3d3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_forgotpassword"
        android:layout_centerInParent="true"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:id="@+id/btn_login"
        android:onClick="login"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="------------------ OR CONNECT WITH ------------------"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/btn_login"
        android:id="@+id/tv_connectwith"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />
    <!--<com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_facebooklogin"
        android:layout_below="@id/tv_connectwith"
        android:gravity="center"
        android:layout_marginLeft="20dp"/>
    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_connectwith"
        android:layout_toRightOf="@id/btn_facebooklogin"
        android:id="@+id/signin"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        /> -->




    </RelativeLayout>

</RelativeLayout>
